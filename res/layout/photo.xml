<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content">
  <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:background="@drawable/gradient" android:orientation="vertical">
  <ImageView android:id="@+id/photoImg" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
  <TextView android:id="@+id/photoTitle" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
  <TextView android:id="@+id/photoCredits" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
  <TextView android:id="@+id/photoStat" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
  <TextView android:id="@+id/photoTags" android:layout_width="fill_parent" android:layout_height="fill_parent"/>
  </LinearLayout>
</LinearLayout>

